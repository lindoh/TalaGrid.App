<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:TalaGrid.ViewModels"
             x:DataType="viewmodel:HomeViewModel"
             x:Class="TalaGrid.Views.HomeView"
             BackgroundImageSource="background_desktop.jpeg">

    <VerticalStackLayout MaximumWidthRequest="{x:OnPlatform Android=450, WinUI=600}" Margin="10"  Padding="5">
        <Label Text="Hi, There!" FontSize="Large" FontAttributes="Italic"
               TextColor="#155ca1" HorizontalOptions="Center"
               Margin="10"/>
        <Label Text="Welcome Back" FontSize="Small" FontAttributes="Italic"
               TextColor="#155ca1" HorizontalOptions="Center"/>
        <Label Text="Navigate through the left pane to capture collected bottles, 
               Update user information and banking details, delete user account, and more."
               TextColor="Black" HorizontalOptions="CenterAndExpand" Margin="10, 50, 10, 10"
               Padding="20"/>

    </VerticalStackLayout>
</ContentPage>